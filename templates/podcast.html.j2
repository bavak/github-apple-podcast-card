<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
   <foreignObject width="240" height="346">
      <div xmlns="http://www.w3.org/1999/xhtml" class="container" style="width: fit-content; height: fit-content; font-family: SF Pro Text, SF Pro Icons, Helvetica Neue, Helvetica, Arial, sans-serif; font-weight: 400;">
         <body style="position: absolute; width: 100%; height: 100%; background-color: transparent; margin: 0;">
            <div class="card" style="background: black; border-radius: 0.5rem; width: 240px; height: fit-content;">
               <img src="data:image/jpeg;base64, {{artwork_url}}" class="thumbnail" style="width: 100%; border-top-left-radius: 0.5rem; border-top-right-radius: 0.5rem;"/>
               <div class="info" style="margin-top: 0.1rem; font-family: SF Pro Text, sans-serif !important;">
                  <p class="title" style="margin-top: 10px; font-size: 1.25rem; font-weight: 800; color: white; margin-bottom: 0.25rem; padding: 0.5rem 1rem 0rem 1rem; letter-spacing: 0px; word-spacing: 0px;">
                     <b>{{ track_name }}</b>
                  </p>
                  <p style="margin: 0.1rem; margin-bottom: 0.5rem; font-size: 0.8rem; font-weight: 400; color: white; font-family: SF Pro Text, sans-serif !important; padding-left: 1rem;">
                     {{ artist_name }}
                  </p>
                  <div class="apple-music" style="display: flex; flex-direction: row; align-items: center; font-size: 1rem; padding: 0rem 0rem 1rem 1rem; ">
                     <img src="data:image/png;base64, {{apple_icon}}" class="icon" style="width: 16px; height: 16px; margin-bottom: 0.2rem; margin-right: -0.1rem;"/>
                     <span style="display: flex; align-items: center; color: gray; margin-left: .3rem; ">
                     Podcast
                     </span>
                  </div>
               </div>
            </div>
            <!-- partial -->
         </body>
      </div>
   </foreignObject>
</svg>