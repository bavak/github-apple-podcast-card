<svg width="300" height="400" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 300 400">
    <foreignObject width="300" height="388">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container" style="margin-left:5px; width: fit-content; height: fit-content; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; font-weight: 400;">

              <body style="position: absolute; width: 100%; height: 100%; background-color: transparent; margin: 0;">
                <div class="card" style="background: white; box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); border-radius: 0.5rem; width: 240px; height: fit-content; padding: 1rem;">
                <img src="data:image/jpeg;base64, {{artwork_url}}" class="thumbnail" style="width: 100%; border-radius: 0.5rem; box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);"/>
                
                <div class="info" style="margin-top: 0.1rem; font-family: 'San Francisco', sans-serif !important;">
                  <p class="title" style="margin-top: 10px; font-size: 1.25rem; font-weight: 800; margin-bottom: 0.25rem; letter-spacing: 0px; word-spacing: 0px;
"><b>{{ track_name }}</b></p>
                  <p style="margin: 0.1rem; margin-bottom: 0.5rem; font-size: 1rem; font-weight: 400; font-family: 'San Francisco', sans-serif !important;">{{ artist_name }}</p>
                  <div class="apple-music" style="display: flex; flex-direction: row; align-items: center; font-size: 1rem;">
                    <img src="data:image/png;base64, {{apple_icon}}" class="icon" style="width: 18px; height: 18px; margin-bottom: 0.2rem; margin-right: -0.25rem;"/>
                      <span style="display: flex; align-items: center; color: gray; margin-left: .3rem; ">
                      Podcast
                      </span>
                  </div>
                </div>
              </div>
              <!-- partial -->
              </body>
        </div>
    </foreignObject>
</svg>